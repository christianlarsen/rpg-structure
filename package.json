{
  "name": "rpg-structure",
  "displayName": "RPG structure",
  "description": "RPG: Define qualified structure",
  "version": "0.0.3",
  "publisher": "ChristianLarsen",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "icon": "assets/rpg-structure-icon.png",
  "keywords": [
    "rpg",
    "ibmi",
    "rpgle",
    "sqlrpgle",
    "as400",
    "structure",
    "codegen"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/christianlarsen/rpg-structure.git"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rpg-structure.generator",
        "title": "Structure generator",
        "category": "RPG"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "rpg-structure",
          "title": "RPG Structure",
          "icon": "assets/rpg-structure-icon.svg"
        }
      ]
    },
    "views": {
      "rpg-structure": [
        {
          "id": "rpg-structure-button",
          "name": "RPG Structure"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view" : "rpg-structure-button",
        "contents" : "Press to run the RPG Structure generator.\n\n[RPG Structure Wizard](command:rpg-structure.generator)\n"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  }
}