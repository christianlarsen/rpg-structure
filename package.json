{
  "name": "rpg-structure",
  "displayName": "RPG structure",
  "description": "RPG: Define qualified structure",
  "icon": "assets/rpg-structure-icon.png",
  "author": {
    "name": "Christian Larsen",
    "url": "https://www.linkedin.com/in/christianlarsenvalverde/"
  },
  "publisher": "ChristianLarsen",
  "version": "0.0.5",
  "repository": {
    "type": "git",
    "url": "https://github.com/christianlarsen/rpg-structure.git"
  },
  "keywords": [
    "rpg",
    "ibmi",
    "rpgle",
    "sqlrpgle",
    "as400",
    "structure",
    "codegen"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
  "onLanguage:rpgle",
  "onLanguage:sqlrpgle"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "rpg-structure",
          "title": "RPG Structure",
          "icon": "assets/rpg-structure-icon.svg",
          "when": "rpgStructure.showContainer"
        }
      ]
    },
    "views": {
      "rpg-structure": [
        {
          "id": "rpg-structure-header",
          "name": "Structure definition",
          "when": "resourceExtname == .rpgle"
        },
        {
          "id": "rpg-structure-fields",
          "name": "Fields",
          "when": "resourceExtname == .rpgle || resourceExtname == .sqlrpgle"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command" : "rpgStructure.cleanHeader",
          "when" : "view == rpg-structure-header",
          "group" : "navigation"
        },
        {
          "command" : "rpgStructure.cleanFields",
          "when" : "view == rpg-structure-fields && rpgStructure.hasFields",
          "group" : "navigation"
        },
        {
          "command": "rpgStructure.addField",
          "when": "view == rpg-structure-fields",
          "group": "navigation"
        },
        { 
          "command" : "rpgStructure.generate",
          "when" : "view == rpg-structure-fields && rpgStructure.hasFields && rpgStructure.hasHeader",
          "group" : "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "rpgStructure.cleanHeader",
        "title": "Clean Header",
        "category": "RPG Structure",
        "icon": "$(debug-restart)"
      },
      {
        "command": "rpgStructure.cleanFields",
        "title": "Clean Fields",
        "category": "RPG Structure",
        "icon": "$(debug-restart)"
      },
      {
        "command": "rpgStructure.addField",
        "title": "Add Field",
        "category": "RPG Structure",
        "icon": "$(add)"
      },
      {
        "command": "rpgStructure.generate",
        "title": "Generate Structure",
        "category": "RPG Structure",
        "icon": "$(code-oss)"
      }

    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  }
}